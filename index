  <script>
    // helper: show active block's sections with small stagger animation
    function showActiveWithStagger() {
      const activeBlock = document.querySelector('.lang-block.active');
      if(!activeBlock) return;
      const items = activeBlock.querySelectorAll('.intro, .section');
      items.forEach((el, i) => {
        el.classList.remove('visible');
        setTimeout(()=> el.classList.add('visible'), 120 * i);
      });
    }

    function hideNonActive() {
      document.querySelectorAll('.lang-block:not(.active) .intro, .lang-block:not(.active) .section')
        .forEach(el => el.classList.remove('visible'));
    }

    function switchLang() {
      const ru = document.getElementById('ru');
      const en = document.getElementById('en');
      ru.classList.toggle('active');
      en.classList.toggle('active');

      const btn = document.querySelector('.lang-switch');
      btn.textContent = ru.classList.contains('active') ? "EN" : "RU";

      hideNonActive();
      // small timeout so CSS display toggles first
      setTimeout(showActiveWithStagger, 80);
    }

    // IntersectionObserver for reveal on scroll (only for visible language block)
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if(entry.isIntersecting) entry.target.classList.add('visible');
      });
    }, { threshold: 0.12 });

    document.addEventListener('DOMContentLoaded', () => {
      // observe all intro/section elements (observer will trigger only visible ones)
      document.querySelectorAll('.intro, .section').forEach(el => observer.observe(el));
      // ensure initial active block animates
      showActiveWithStagger();

      // ensure lang button reflects initial state
      const btn = document.querySelector('.lang-switch');
      const ru = document.getElementById('ru');
      btn.textContent = ru.classList.contains('active') ? "EN" : "RU";
    });
  </script>
